<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main.View.DetailsCharacters">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_details_characters"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#6BB442"
        android:minHeight="?attr/actionBarSize"
        android:paddingTop="0dp"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_toolbar_details_characters"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="15dp"
        android:text="DÃ©tails du personnage"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar_details_characters"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/toolbar_details_characters"
        app:layout_constraintTop_toTopOf="@+id/toolbar_details_characters" />

    <fragment
        android:id="@+id/container_details_characters"
        android:name="com.example.rickandmortyapplication.Main.Fragment.FragmentDetailsCharacter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_details_characters" />
</androidx.constraintlayout.widget.ConstraintLayout>